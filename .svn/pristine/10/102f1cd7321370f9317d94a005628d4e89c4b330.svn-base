<!DOCTYPE html>
<html xmlns:th="http://www.thymeleaf.org"
	xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>bank.html</title>
	
    <meta name="keywords" content="keyword1,keyword2,keyword3">
    <meta name="description" content="this is my page">
    <meta name="content-type" content="text/html; charset=UTF-8">
    
    <link th:href="@{/assets/css/css.css}" rel="stylesheet" type="text/css">
	<link th:href="@{/assets/css/main.css}" rel="stylesheet" type="text/css">

  </head>
  <div th:replace="manage/common/common_js :: basic"></div>
 <body>
	<form id="form" :controller="bank">
		<table th:width="100+'%'" th:border="0" th:cellspacing="0"
			th:cellpadding="0" id="main-tab">
			<tbody th:class="@{active-tb baseInfo}">
				<tr onmouseout="style.backgroundColor='#ffffff'"
					onMouseOver="this.style.backgroundColor='#edf5ff'">
					<td th:align='center' th:valign='middle'
						th:class='@{borderright borderbottom bggray font-weight}'>账户名</td>
					<td th:align='center' th:valign='middle'
						th:class='@{borderright borderbottom main-for}'>
						<input type="hidden" name="id" :duplex="@dup.id == null ? '' : @dup.id"/>
						<input th:class="text-word" type="text" name="realName" placeholder="输入开户行真实姓名" th:style="@{width:100%}" :duplex="@dup.realName == null ? '' : @dup.realName"></td>
				</tr>
				<tr onmouseout="style.backgroundColor='#ffffff'"
					onMouseOver="this.style.backgroundColor='#edf5ff'">
					<td th:align='center' th:valign='middle'
						th:class='@{borderright borderbottom bggray font-weight}'>开户银行</td>
					<td th:align='center' th:valign='middle'
						th:class='@{borderright borderbottom main-for}'>
						<select th:class="@{level}" name="bankName" th:style="@{width:100%}" :duplex="@dup.bankName">
							<option ms-attr="{value:item.name}" :for="($index,item) in @dup.banks">{{item.name}}</option>
					</select>
					</td>
				</tr>
				<tr onmouseout="style.backgroundColor='#ffffff'"
					onMouseOver="this.style.backgroundColor='#edf5ff'">
					<td th:align='center' th:valign='middle'
						th:class='@{borderright borderbottom bggray font-weight}'>开户支行</td>
					<td th:align='center' th:valign='middle'
						th:class='@{borderright borderbottom main-for}'>
						<input th:class="text-word" type="text" name="bankBranch" placeholder="输入开户支行" th:style="@{width:100%}" :duplex="@dup.bankBranch == null ? '' : @dup.bankBranch">
					</td>
				</tr>

				<tr onmouseout="style.backgroundColor='#ffffff'"
					onMouseOver="this.style.backgroundColor='#edf5ff'">
					<td th:align='center' th:valign='middle'
						th:class='@{borderright borderbottom bggray font-weight}'>账户卡号</td>
					<td th:align='center' th:valign='middle'
						th:class='@{borderright borderbottom main-for}'>
						<input th:class="text-word" type="text" name="bankNumber" placeholder="输入账户卡号" th:style="@{width:100%}" :duplex="@dup.bankNumber == null ? '' : @dup.bankNumber">
					</td>
				</tr>
			</tbody>
			<tfoot>
				<tr
					th:onmouseout="@{this.style.backgroundColor=&quot;#ffffff&quot;}"
					th:onmouseover="@{this.style.backgroundColor=&quot;#edf5ff&quot;}"
					th:style="@{background-color: rgb(255, 255, 255);}">
					<td th:colspan="2" th:class="@{main-for}"
						th:style="@{text-align: center;}"><input type="button"
						th:value="提交" th:class="@{text-but}" :click="@commit"></td>
				</tr>
			</tfoot>
		</table>
	</form>
	<div th:replace="manage/common/common_js :: work"></div>
	<script th:inline="javascript">
		var options={
			id:{
				id:"bank"
			},
			commit:{
				type:"post",
				url:"/man/bank/update",
				form:"#form"
			}
		}
		var vm = work(options);
		vm.dup={
			id:[[${bank.id}]],
			realName:[[${bank.realName}]],
			bankName:[[${bank.bankName}]],
			bankBranch:[[${bank.bankBranch}]],
			bankNumber:[[${bank.bankNumber}]],
			banks:[[${banks}]]
		}
	</script>
</body>
</html>
