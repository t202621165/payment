package com.cypay.common.enums;

import com.alibaba.fastjson.JSONObject;

/**
 * 操作结果
 * @author International
 *
 */
public enum Result {

	/**成功*/
	success(Boolean.TRUE, "操作成功！", "",""),
	
	/**失败*/
	error(Boolean.FALSE, "操作失败！", "","");
	
	private Boolean state;
	
	private String msg;
	
	private String ele;
	
	private Object data;
	
	public static boolean isPass = false;
	
	private Result(Boolean state, String msg, String ele,Object data) {
		this.state = state;
		this.msg = msg;
		this.ele = ele;
		this.data = data;
	}

	public Boolean getState() {
		return state;
	}

	public String getMsg() {
		return msg;
	}
	
	public String getEle() {
		return ele;
	}
	
	public Object getData(){
		return data;
	}

	public Result setMsg(String msg) {
		this.msg = msg;
		isPass = this.state;
		return this;
	}
	
	public Result setMsg(String msg, String ele) {
		this.msg = msg;
		this.ele = ele;
		isPass = this.state;
		return this;
	}

	public JSONObject toJSON(String msg) {
		this.msg = msg;
		return this.toJSON();
	}
	
	
	public JSONObject toJSON(String msg, String ele) {
		this.msg = msg;
		this.ele = ele;
		return this.toJSON();
	}
	
	public JSONObject toJSON(String msg,Object data){
		this.msg = msg;
		this.data = data;
		return this.toJSON();
	}
	
	public JSONObject toJSON() {
		JSONObject json = new JSONObject();
		json.put("state", this.state);
		json.put("msg", this.msg);
		json.put("ele", this.ele);
		json.put("data",this.data);
		return json;
	}
	
}
