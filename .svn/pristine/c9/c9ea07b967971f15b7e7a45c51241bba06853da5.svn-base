package com.cypay.common.service.impl;

import java.util.List;

import org.springframework.stereotype.Service;

import com.cypay.common.entity.Group;
import com.cypay.common.entity.PartitionGroup;
import com.cypay.common.repository.impl.PartitionGroupRepository;

@Service
public class PartitionGroupService extends BaseServiceImpl<PartitionGroupRepository, PartitionGroup,PartitionGroup>{
	public List<PartitionGroup> findByPartitionId(Long pId){
		return baseRepository.findByPartitionId(pId);
	}
	
	public List<Group> groups(List<Group> groups,Long pId){
		List<PartitionGroup> pgs = baseRepository.findByPartitionId(pId);
		for (Group group : groups){
			for (PartitionGroup pg : pgs){
				if (group.getId().equals(pg.getGroupId())){
					group.setIsChecked(true);
					break;
				}
			}
		}
		return groups;
	}
}
