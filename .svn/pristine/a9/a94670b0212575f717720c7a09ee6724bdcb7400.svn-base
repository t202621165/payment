<body>
	<!--main_top-->
	<form id="form" th:object="${system}">
	<table th:width="99+'%'" th:border="0" th:cellspacing="0"
		th:cellpadding="0" id="searchmain">
		<tr>
			<td th:align="left" th:valign="top">
				<!-- 结算设置 -->
				<table th:width="100+'%'" th:border="0" th:cellspacing="0"
					th:cellpadding="0" id="main-tab" :controller="set">
					<thead>
						<tr>
							<th th:colspan="6"
								th:style="@{text-align: left;padding: 0 10px;color: #2790F7;}">商户设置</th>
						</tr>
					</thead>
					<tr th:onMouseOut="@{this.style.backgroundColor='#ffffff'}"
						th:onMouseOver="@{this.style.backgroundColor='#edf5ff'}">
						<td th:align="right" th:valign="middle"
							class="borderright borderbottom bggray" style="width: 150px;">默认结算类型：</td>
						<td th:align="left" th:valign="middle"
							th:class="@{borderright borderbottom main-for}">
							<label for="settlementType-0" class="label-box checkbox2 box-blue" style="margin-right: 30px;">
								<input type="radio" id="settlementType-0" th:field="*{settlementType}" value="0" class="choose">
								<i class="radio default"></i>T+0
							</label>
							<label for="settlementType-1" class="label-box checkbox2 box-blue">
								<input type="radio" id="settlementType-1" th:field="*{settlementType}" value="1" class="choose">
								<i class="radio default"></i>T+1
							</label>
						</td>
						<td th:align="right" th:valign="middle"
							class="borderright borderbottom bggray" style="width: 150px;">默认提现手续费：</td>
						<td th:align="left" th:valign="middle" class="borderright borderbottom main-for">
							<input type="number" th:field="*{defaultFee}" class="text-word" min="0" style="padding: 0 0 0 10px;"/>
						</td>
						<td th:align="right" th:valign="middle"
							class="borderright borderbottom bggray">商户注册：</td>
						<td th:align="left" th:valign="middle"
							th:class="@{borderright borderbottom main-for}">
							<label for="registerState-1" class="label-box checkbox2 box-blue" style="margin-right: 10px;">
								<input type="radio" id="registerState-1" th:field="*{registerState}" value="1" class="choose">
								<i class="radio default"></i>开启商户注册
							</label>
							<label for="registerState-2" class="label-box checkbox2 box-blue" style="margin-right: 10px;">
								<input type="radio" id="registerState-2" th:field="*{registerState}" value="2" class="choose">
								<i class="radio default"></i>商户注册审核
							</label>
							<label for="registerState-0" class="label-box checkbox2 box-blue">
								<input type="radio" id="registerState-0" th:field="*{registerState}" value="0" class="choose">
								<i class="radio default"></i>关闭商户注册
							</label>
						</td>
					</tr>
				</table>
			</td>
		</tr>
		<tr>
			<td th:width="99+'%'" th:align="left" th:valign="top"
				th:style="@{padding: 5px;}"></td>
		</tr>
		
		<tr>
			<td th:align="left" th:valign="top">
				<!-- 流量统计设置 -->
				<table th:width="100+'%'" th:border="0" th:cellspacing="0"
					th:cellpadding="0" id="main-tab" :controller="set">
					<thead>
						<tr>
							<th th:colspan="6"
								th:style="@{text-align: left;padding: 0 10px;color: #2790F7;}">IPS流量统计</th>
						</tr>
					</thead>
					<tr th:onMouseOut="@{this.style.backgroundColor='#ffffff'}"
						th:onMouseOver="@{this.style.backgroundColor='#edf5ff'}">
						<td th:align="right" th:valign="middle" class="borderright borderbottom bggray">流量统计开关：</td>
						<td th:align="left" th:valign="middle" class="borderright borderbottom main-for">
							<label th:for="isIps" class="label-box no-margin">
								<input id="isIps" type="checkbox" th:checked="*{isIps}" class="switch"/>
								<span class="box-switch swith-blue enable"><i></i></span>
							</label>
						</td>
						<td th:align="right" th:valign="middle" class="borderright borderbottom bggray" style="width: 150px;">登陆器统计开关：</td>
						<td th:align="left" th:valign="middle" class="borderright borderbottom main-for">
							<label th:for="isLogin" class="label-box no-margin">
								<input id="isLogin" type="checkbox" th:checked="*{isLogin}" class="switch"/>
								<span class="box-switch swith-blue enable"><i></i></span>
							</label>
						</td>
					</tr>
					<tr th:onMouseOut="@{this.style.backgroundColor='#ffffff'}"
						th:onMouseOver="@{this.style.backgroundColor='#edf5ff'}">
						<td th:align="right" th:valign="middle" class="borderright borderbottom bggray">流量统计间隔：</td>
						<td th:align="left" th:valign="middle" class="borderright borderbottom main-for">
							<label for="5-minute" class="label-box checkbox2 box-blue" style="margin-right: 10px;">
								<input type="radio" id="5-minute" th:field="*{visitTime}" value="2" class="choose">
								<i class="radio default"></i>2分钟
							</label>
							<label for="10-minute" class="label-box checkbox2 box-blue" style="margin-right: 10px;">
								<input type="radio" id="10-minute" th:field="*{visitTime}" value="5" class="choose">
								<i class="radio default"></i>5分钟
							</label>
							<label for="20-minute" class="label-box checkbox2 box-blue" style="margin-right: 10px;">
								<input type="radio" id="20-minute" th:field="*{visitTime}" value="10" class="choose">
								<i class="radio default"></i>10分钟
							</label>
							<label for="30-minute" class="label-box checkbox2 box-blue">
								<input type="radio" id="30-minute" th:field="*{visitTime}" value="20" class="choose">
								<i class="radio default"></i>20分钟
							</label>
						</td>
						<td th:align="right" th:valign="middle" class="borderright borderbottom bggray" style="width: 150px;">登陆器统计间隔：</td>
						<td th:align="left" th:valign="middle" class="borderright borderbottom main-for">
							<label for="15minute" class="label-box checkbox2 box-blue" style="margin-right: 10px;">
								<input type="radio" id="15minute" th:field="*{loginTime}" value="5" class="choose">
								<i class="radio default"></i>5分钟
							</label>
							<label for="30minute" class="label-box checkbox2 box-blue" style="margin-right: 10px;">
								<input type="radio" id="30minute" th:field="*{loginTime}" value="10" class="choose">
								<i class="radio default"></i>10分钟
							</label>
							<label for="60minute" class="label-box checkbox2 box-blue" style="margin-right: 10px;">
								<input type="radio" id="60minute" th:field="*{loginTime}" value="20" class="choose">
								<i class="radio default"></i>20分钟
							</label>
							<label for="90minute" class="label-box checkbox2 box-blue">
								<input type="radio" id="90minute" th:field="*{loginTime}" value="30" class="choose">
								<i class="radio default"></i>30分钟
							</label>
						</td>
					</tr>
					<tr>
						<td th:align="right" th:valign="middle" class="borderright borderbottom bggray" style="width: 150px;">统计数据清理：
						</td>
						<td colspan="3">
							<input id="clear" type="button" value="清理数据" style="margin-left: 5px;" class="btn-check btn-red"/>
							<label style="margin-left:10px;color:red">【保留近3天IPS统计数据记录】</label>
						</td>
					</tr>
				</table>
			</td>
		</tr>
		
		<tr>
			<td th:width="99+'%'" th:align="left" th:valign="top"
				th:style="@{padding: 5px;}"></td>
		</tr>
		
