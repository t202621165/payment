		<tr>
			<td th:width="99+'%'" th:align="left" th:valign="top"
				th:style="@{padding: 5px;}"></td>
		</tr>
		
		<tbody :controller="system-set">
			<tr>
				<td th:align="left" th:valign="top">
					<!-- 游戏引擎设置 -->
					<table th:width="100+'%'" th:border="0" th:cellspacing="0"
						th:cellpadding="0" id="main-tab">
						<thead>
							<tr>
								<th colspan="6" style="text-align: left;padding: 0 10px;color: #2790F7;">游戏引擎设置</th>
							</tr>
						</thead>
	
						<tr th:onMouseOut="@{this.style.backgroundColor='#ffffff'}"
							th:onMouseOver="@{this.style.backgroundColor='#edf5ff'}">
							<td th:align="left" th:valign="top">
								<table th:width="100+'%'" th:border="0" th:cellspacing="0"
									th:cellpadding="0" id="main-line-tab">
									<tr>
										<td th:align="right" th:valign="middle"
											class="borderright borderbottom bggray">游戏引擎：</td>
										<td th:align="right" th:valign="middle"
											th:class="@{borderright borderbottom main-for}"
											style="padding: 0;">
											<table th:width="100+'%'" th:border="0" th:cellspacing="0" th:cellpadding="0">
												<thead>
													<tr>
														<th th:align="center" th:valign="middle" class="borderright">引擎名称</th>
														<th th:align="center" th:valign="middle" class="borderright">引擎命令</th>
														<th th:align="center" th:valign="middle" class="borderright" colspan="4">操作</th>
													</tr>
												</thead>
												<tbody>
													<tr th:onMouseOut="@{this.style.backgroundColor='#ffffff'}"
														th:onMouseOver="@{this.style.backgroundColor='#edf5ff'}" :for="($index, item) in @data.engines">
														<td th:align="center" th:valign="middle" class="borderright borderbottom">
															 <input type="text" class="table-input-sys" :attr="{name: 'engines['+$index+'].engine'}" :duplex="@item.engine" placeholder="0" /></td>
														<td th:align="center" th:valign="middle" class="borderright borderbottom">
															<input type="text" class="table-input-sys" :attr="{name: 'engines['+$index+'].command'}" :duplex="@item.command" placeholder="0" />
														</td>
														<td th:align="center" th:valign="middle" class="borderright borderbottom">
															<input type="button" value="移除引擎" class="btn-check btn-red" :click="@remove('engines', $index)">
														</td>
													</tr>
												</tbody>
												
												<tfoot>																																		
													<tr th:onMouseOut="@{this.style.backgroundColor='#ffffff'}"
														th:onMouseOver="@{this.style.backgroundColor='#edf5ff'}">
														<td th:align="center" th:valign="middle"
															th:class="@{borderright borderbottom main-for}" th:colspan="3">
															<input type="button" value="恢复" class="btn-check btn-green" :if="@isRenew('engines')" :click="@renew('engines')">
															<input type="button" value="添加" class="btn-check btn-default" style="margin-left: 10px;" :click="@add('engines')">
														</td>
													</tr>
												</tfoot>
																		
											</table>
										</td>
	
									</tr>
								</table>
							</td>
						</tr>
	
					</table>
				</td>
			</tr>
			
			<tr>
				<td th:width="99+'%'" th:align="left" th:valign="top"
					th:style="@{padding: 5px;}"></td>
			</tr>
			
			<tr>
				<td th:align="left" th:valign="top">
					<!-- 结算银行卡设置 -->
					<table th:width="100+'%'" th:border="0" th:cellspacing="0"
						th:cellpadding="0" id="main-tab">
						<thead>
							<tr>
								<th th:colspan="6"
									th:style="@{text-align: left;padding: 0 10px;color: #2790F7;}">结算银行卡设置</th>
							</tr>
						</thead>
	
						<tr th:onMouseOut="@{this.style.backgroundColor='#ffffff'}"
							th:onMouseOver="@{this.style.backgroundColor='#edf5ff'}">
							<td th:align="left" th:valign="top">
								<table th:width="100+'%'" th:border="0" th:cellspacing="0"
									th:cellpadding="0" id="main-line-tab">
									<tr>
										<td th:align="right" th:valign="middle"
											class="borderright borderbottom bggray">结算银行卡：</td>
										<td th:align="right" th:valign="middle"
											th:class="@{borderright borderbottom main-for}"
											style="padding: 0;">
											<table th:width="100+'%'" th:border="0" th:cellspacing="0"
												th:cellpadding="0">
												<thead>
													<tr>
														<th th:align="center" th:valign="middle" class="borderright">银行卡名称</th>
														<th th:align="center" th:valign="middle" class="borderright">银行卡标识</th>
														<th th:align="center" th:valign="middle" class="borderright" colspan="4">操作</th>
													</tr>
												</thead>
												<tbody>
													<tr th:onMouseOut="@{this.style.backgroundColor='#ffffff'}"
														th:onMouseOver="@{this.style.backgroundColor='#edf5ff'}" :for="($index, item) in @data.banks">
														<td th:align="center" th:valign="middle" class="borderright borderbottom">		
															<input type="text" class="table-input-sys" :attr="{name: 'banks['+$index+'].name'}" :duplex="@item.name" placeholder="0" /></td>
														<td th:align="center" th:valign="middle" class="borderright borderbottom">
															<input type="text" class="table-input-sys" :attr="{name: 'banks['+$index+'].mark'}" :duplex="@item.mark" placeholder="0" /></td>
														<td th:align="center" th:valign="middle" class="borderright borderbottom">
															<input type="button" value="移除银行" class="btn-check btn-red" :click="@remove('banks', $index)">
														</td>
													</tr>
	
												</tbody>
												
												<tfoot>
													<tr th:onMouseOut="@{this.style.backgroundColor='#ffffff'}"
														th:onMouseOver="@{this.style.backgroundColor='#edf5ff'}">
														<td th:align="center" th:valign="middle" class="borderright borderbottom main-for" colspan="3">
															<input type="button" value="恢复" class="btn-check btn-green" :if="@isRenew('banks')" :click="@renew('banks')">
															<input type="button" value="添加" class="btn-check btn-default" style="margin-left: 10px;" :click="@add('banks')">
														</td>
													</tr>
												</tfoot>
																		
											</table>
										</td>
	
									</tr>
								</table>
							</td>
						</tr>
	
					</table>
				</td>
			</tr>
			
			<tr>
				<td th:width="99+'%'" th:align="left" th:valign="top"
					th:style="@{padding: 5px;}"></td>
			</tr>
	
			<tr>
				<td th:align="left" th:valign="top">
					<!-- 资费标准设置 -->
					<table th:width="100+'%'" th:border="0" th:cellspacing="0"
						th:cellpadding="0" id="main-tab">
						<thead>
							<tr>
								<th colspan="6" style="text-align: left;padding: 0 10px;color: #2790F7;">网站资费标准设置</th>
							</tr>
						</thead>
	
						<tr th:onMouseOut="@{this.style.backgroundColor='#ffffff'}"
							th:onMouseOver="@{this.style.backgroundColor='#edf5ff'}">
							<td th:align="left" th:valign="top">
								<table th:width="100+'%'" th:border="0" th:cellspacing="0"
									th:cellpadding="0" id="main-line-tab">
									<tr>
										<td th:align="right" th:valign="middle"
											class="borderright borderbottom bggray">资费标准：</td>
										<td th:align="right" th:valign="middle"
											th:class="@{borderright borderbottom main-for}"
											style="padding: 0;">
											<table th:width="100+'%'" th:border="0" th:cellspacing="0"
												th:cellpadding="0">
												<thead>
													<tr>
														<th th:align="center" th:valign="middle"
															th:class="borderright">支付类型</th>
														<th th:align="center" th:valign="middle"
															th:class="borderright">支持金额</th>
														<th th:align="center" th:valign="middle"
															th:class="borderright">商户比例</th>
														<th th:align="center" th:valign="middle"
															th:class="borderright">结算周期</th>
														<th th:align="center" th:valign="middle"
															th:class="borderright" th:colspan="4">操作</th>
													</tr>
												</thead>
												<tbody>
													<tr th:onMouseOut="@{this.style.backgroundColor='#ffffff'}"
														th:onMouseOver="@{this.style.backgroundColor='#edf5ff'}" :for="($index, item) in @data.fees">
														<td th:align="center" th:valign="middle" class="borderright borderbottom">
															 <input type="text" class="table-input-sys" :attr="{name: 'fees['+$index+'].type'}" :duplex="@item.type" />
														</td>
														<td th:align="center" th:valign="middle" class="borderright borderbottom">
															<input type="text" class="table-input-sys" :attr="{name: 'fees['+$index+'].des'}" :duplex="@item.des" />
														</td>
														<td th:align="center" th:valign="middle" class="borderright borderbottom">
															<input type="text" class="table-input-sys" :attr="{name: 'fees['+$index+'].rate'}" :duplex="@item.rate" />
														</td>
														<td th:align="center" th:valign="middle" class="borderright borderbottom">
															<input type="text" class="table-input-sys" :attr="{name: 'fees['+$index+'].settleType'}" :duplex="@item.settleType" />
														</td>
														<td th:align="center" th:valign="middle" class="borderright borderbottom">
															<input type="button" value="移除资费" class="btn-check btn-red" :click="@remove('fees', $index)">
														</td>
													</tr>
												</tbody>											
							
												<tfoot>																																		
													<tr th:onMouseOut="@{this.style.backgroundColor='#ffffff'}"
														th:onMouseOver="@{this.style.backgroundColor='#edf5ff'}">
														<td th:align="center" th:valign="middle" class="borderright borderbottom main-for" colspan="5">
															<input type="button" value="恢复" class="btn-check btn-green" :if="@isRenew('fees')" :click="@renew('fees')">
															<input type="button" value="添加" class="btn-check btn-default" style="margin-left: 10px;" :click="@add('fees')">
														</td>
													</tr>
												</tfoot>
																		
											</table>
										</td>
	
									</tr>
								</table>
							</td>
						</tr>
	
					</table>
				</td>
			</tr>
		</tbody>

		<tr>
			<td th:width="99+'%'" th:align="left" th:valign="top"
				th:style="@{padding: 5px;}"></td>
		</tr>
		<tr>
			<td th:align="left" th:valign="top">
			<!-- 网站基本信息设置 -->
				<table th:width="100+'%'" th:border="0" th:cellspacing="0"
					th:cellpadding="0" id="main-tab">
					<thead>
						<tr>
							<th colspan="6" style="text-align: left;padding: 0 10px;color: #2790F7;">网站基本信息</th>
						</tr>
					</thead>
					<tr th:onMouseOut="@{this.style.backgroundColor='#ffffff'}"
						th:onMouseOver="@{this.style.backgroundColor='#edf5ff'}">
						<td th:align="right" th:valign="middle"
							class="borderright borderbottom bggray">网站名称：</td>
						<td th:align="left" th:valign="middle"
							th:class="@{borderright borderbottom main-for}">
							<input type="hidden" th:field="*{id}">
							<input type="text" th:field="*{webName}" style="width:100%" class="text-word">
						</td>
						<td th:align="right" th:valign="middle"
							class="borderright borderbottom bggray">客服电话：</td>
						<td th:align="left" th:valign="middle"
							th:class="@{borderright borderbottom main-for}"><input
							type="text" th:field="*{servicePhone}"
							style="width:100%" class="text-word"></td>
					</tr>
					<tr th:onMouseOut="@{this.style.backgroundColor='#ffffff'}"
						th:onMouseOver="@{this.style.backgroundColor='#edf5ff'}">
						<td th:align="right" th:valign="middle"
							class="borderright borderbottom bggray">公司地址：</td>
						<td th:align="left" th:valign="middle" 
							th:class="@{borderright borderbottom main-for}"><input
							type="text" th:field="*{companyAddress}"
							style="width:100%" th:class="text-word"></td>
						<td th:align="right" th:valign="middle"
							class="borderright borderbottom bggray">客服ＱＱ：</td>
						<td th:align="left" th:valign="middle"
							th:class="@{borderright borderbottom main-for}"><input
							type="text" th:field="*{serviceQQ}"
							style="width:100%" class="text-word"></td>
					</tr>
					
					<tr th:onMouseOut="@{this.style.backgroundColor='#ffffff'}"
						th:onMouseOver="@{this.style.backgroundColor='#edf5ff'}">
						<td th:align="right" th:valign="middle"
							class="borderright borderbottom bggray">版权信息：</td>
						<td th:align="left" th:valign="middle"
							th:class="@{borderright borderbottom main-for}" th:colspan="3">
							<textarea th:field="*{copyright}"></textarea>
						</td>
					</tr>
					
					<tr th:onMouseOut="@{this.style.backgroundColor='#ffffff'}"
						th:onMouseOver="@{this.style.backgroundColor='#edf5ff'}">
						<td th:align="right" th:valign="middle"
							class="borderright borderbottom bggray">关于我们：</td>
						<td th:align="left" th:valign="middle"
							th:class="@{borderright borderbottom main-for}" th:colspan="3">
							<textarea style="line-height: 1.5;height: 250px;" th:field="*{about}"></textarea>
						</td>
					</tr>
					
				</table>
			</td>
		</tr>
		
		<tr>
			<td th:width="99+'%'" th:align="left" th:valign="top"
				th:style="@{padding: 5px;}"></td>
		</tr>
		<tr>
			<td th:align="left" th:valign="top">
				<!-- 结算设置 -->
				<table th:width="100+'%'" th:border="0" th:cellspacing="0"
					th:cellpadding="0" id="main-tab" :controller="set">
					<thead>
						<tr>
							<th th:colspan="6"
								th:style="@{text-align: left;padding: 0 10px;color: #2790F7;}">结算设置</th>
						</tr>
					</thead>
					<tr th:onMouseOut="@{this.style.backgroundColor='#ffffff'}"
						th:onMouseOver="@{this.style.backgroundColor='#edf5ff'}">
						<td th:align="right" th:valign="middle" class="borderright borderbottom bggray" style="width: 150px;">T0最小提现金额：</td>
						<td th:align="left" th:valign="middle" class="borderright borderbottom main-for">
							<input type="number" th:field="*{t0MinAmount}" class="text-word" min="0" style="padding: 0 0 0 10px;"/>
						</td>
						<td th:align="right" th:valign="middle"
							class="borderright borderbottom bggray"
							th:style="@{width: 150px;}">T1最小结算金额：</td>
						<td th:align="left" th:valign="middle"
							th:class="@{borderright borderbottom main-for}">
							<input type="number" th:field="*{t1MinAmount}" class="text-word" min="0" style="padding: 0 0 0 10px;"/></td>
					</tr>

					<tr th:onMouseOut="@{this.style.backgroundColor='#ffffff'}"
						th:onMouseOver="@{this.style.backgroundColor='#edf5ff'}">
						<td th:align="left" th:valign="middle" class="borderright borderbottom main-for" 
							colspan="6" style="text-align: center;">
							<input id="commit" type="button" value="提交" class="text-but"></td>
					</tr>
				</table>
			</td>
		</tr>
	</table>
	</form>
	
	<script src="/assets/js/work.js"></script>
	<script type="text/javascript" th:inline="javascript">
		var system = systemSet({
			id: "system-set",
			engines: [[${system.engines}]],
			banks: [[${system.banks}]],
			fees: [[${system.fees}]]
		});
		$("#commit").on("click", function() {
			ajaxSend("post", "/man/update/sys", $("#form").serialize(), function(data) {
				if (data.state) {
					window.parent.success(data.msg, 2000);
				} else {
					window.parent.error(data.msg, 2000);
				}
			});
		});
		$(".choose").on("click", function() {
			ajaxSend("post","/man/update/"+this.name,{data: this.value},function(data){
				if(data.state)
					window.parent.success(data.msg,2000);
				else
					window.parent.error(data.msg,2000);
			});
		});
		$(".switch").on("click", function() {
			ajaxSend("post","/man/update/"+this.id,{data: this.checked},function(data){
				if(data.state)
					window.parent.success(data.msg,2000);
				else
					window.parent.error(data.msg,2000);
			});
		});
		$("#clear").on("click", function() {
			window.parent.layer.confirm('将清除3天以前的所有IPS统计数据,是否清除？', {
           		 btn : [ '确定', '取消' ]//按钮
       		 	}, function() {
       		 	ajaxSend("get","/man/ips/clear",null,function(data){
       		 		if(data.state){
       		 			window.parent.success(data.msg,2000);
       		 		}else{
       		 			window.parent.error(data.msg,2000);
       		 		}
       		 	});
       		});
		});
	</script>
</body>
</html>
