<style>
body {
	overflow-x: auto;
	background: #f2f0f5;
	padding: 15px 0px 10px 5px;
}

.bggray {
	background: #f9f9f9;
	font-size: 14px;
	padding: 10px 10px 10px 0;
	width: 120px;
}

.main-for input.text-word {
	width: auto;
}

.main-for select {
	width: auto;
}

#main-tab td {
	font-size: 15px;
	line-height: 25px;
}

.main-for {
	padding: 5px;
}

label input {
	cursor: pointer;
}
